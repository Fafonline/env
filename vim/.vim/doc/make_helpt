HELP_FILE_EXTENSION=txt.gz
SUBT_HELP_FILE_EXTENSION=txt
HELP_FILE_LIST=$(shell ls | grep $(HELP_FILE_EXTENSION) )
HELP_FILE_LIST_SUBST=$(patsubst %.$(HELP_FILE_EXTENSION), %.$(SUBT_HELP_FILE_EXTENSION),$(HELP_FILE_LIST))

default:
	$(MAKE) $(HELP_FILE_LIST_SUBST)

%.$(SUBT_HELP_FILE_EXTENSION): %.$(HELP_FILE_EXTENSION)
	gzip -d -v $<

.PHONY: clean
clean:
	rm -f $(HELP_FILE_LIST_SUBST)


