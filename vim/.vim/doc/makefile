UNZIP_HELP_FILE_EXTENSION=txt.gz
UNZIP_HELP_FILE_EXTENSION_SUBST=txt
UNZIP_HELP_FILE_LIST=$(shell ls | grep $(UNZIP_HELP_FILE_EXTENSION) )
UNZIP_HELP_FILE_LIST_SUBST=$(patsubst %.$(UNZIP_HELP_FILE_EXTENSION), %.$(UNZIP_HELP_FILE_EXTENSION_SUBST),$(UNZIP_HELP_FILE_LIST))


ZIP_HELP_FILE_EXTENSION=txt
ZIP_HELP_FILE_EXTENSION_SUBST=txt.gz
ZIP_HELP_FILE_LIST=$(shell ls | grep $(ZIP_HELP_FILE_EXTENSION) )
ZIP_HELP_FILE_LIST_SUBST=$(patsubst %.$(ZIP_HELP_FILE_EXTENSION), %.$(ZIP_HELP_FILE_EXTENSION_SUBST),$(ZIP_HELP_FILE_LIST))

default:
	$(MAKE) unzip
	
unzip:
	$(MAKE) $(UNZIP_HELP_FILE_LIST_SUBST)


zip:
	$(MAKE) $(ZIP_HELP_FILE_LIST_SUBST)

%.$(UNZIP_HELP_FILE_EXTENSION_SUBST): %.$(UNZIP_HELP_FILE_EXTENSION)
	gzip -d -v $<

%.$(ZIP_HELP_FILE_EXTENSION_SUBST): %.$(ZIP_HELP_FILE_EXTENSION)
	gzip -c $< >> $@
